body
    height 100vh
    margin 0
    width (100vw - 60px)
    text-align center

#sidebar
    display block
    position absolute
    top 0px
    height 100%
    width 7vw
    z-index 3
    a
        width 100%
        text-decoration none
        display block
        font-size 1.2vw
        transition 0.3s
        margin 2vh 0
        &:hover
            background #616161

    #sidebar-menu
        img
            width 55%
            padding 9px 0 4px 0

.logo-holder
    position relative
    width 100%
    height 100%
    .text
        position absolute
        width 100%
        left -100px
    &:hover
        .image
            color #FFFF00
        .text
            opacity 1
            transition .2s
            transform translateX(100px)

.logo-holder .image,
.logo-holder .text
    transition opacity 0.2s ease-in-out

#home
    height 100vh
    width 100vw
    position relative

#headline-text-container
    width (100vw)
    margin-left 2.5%
    text-align center
    height 100vh
    overflow hidden

.headline-text
    font-size 5vh
    padding 60px 0 0 25%
    margin-bottom 0
    text-align left

h1
    margin-top 0

.subtitle
    font-size 3vh
    padding 15px 0 0 26%
    margin-top 0
    text-align left

#action-button
    background none
    border 3px solid #FFFF00
    border-radius 50px
    padding 15px 50px
    transition 0.65s
    margin-top 50px
    &:hover
        background #FFFF00

#bottom-link-container
    position absolute
    width 50%
    bottom 0
    left 25vw
