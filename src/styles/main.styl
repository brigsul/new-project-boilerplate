viewWidth = 93vw;
viewHeight = 100vh;

html 
    height viewHeight
    width viewWidth
    box-sizing border-box

body
    width viewWidth
    text-align center

#sidebar
    display block
    background: #212121
    position absolute
    top 0px
    height viewHeight
    width 7vw
    z-index 3
    #main-logo
        margin-bottom: 25vh
    a
        width 100%
        text-decoration none
        display block
        font-size 1.2vw
        transition 0.3s
        margin 2vh 0
        &:hover
            background #616161

    #sidebar-menu
        img
            width 45%
            padding 9px 0 4px 0

.logo-holder
    position relative
    width 100%
    height 100%
    .text
        position absolute
        width 100%
        left -100px
    &:hover
        .image
            color #FFFF00
        .text
            opacity 1
            transition .2s
            transform translateX(100px)

.logo-holder .image,
.logo-holder .text
    transition opacity 0.2s ease-in-out

#home
    height viewHeight
    width viewWidth
    position relative
    left: 7vw

#headline-text-container
    width viewWidth
    text-align center
    height viewHeight
    overflow hidden

.headline-text
    font-size 5vh
    padding 15vh 0 0 25%
    margin-bottom 0
    text-align left

h1
    margin-top 0

.subtitle
    font-size 3vh
    padding 15px 0 0 26%
    margin-top 0
    text-align left

#action-button
    background none
    font-weight: 800
    border 3px solid #FFFF00
    border-radius 50px
    padding 15px 50px
    transition 0.65s
    position: absolute
    left: 37.5vw
    width: 25vw
    margin: 10vh auto 0 auto
    &:hover
        background #FFFF00
        color: #212121

#bottom-link-container
    position relative
    width 50vw
    left 25vw
    bottom 15vh

